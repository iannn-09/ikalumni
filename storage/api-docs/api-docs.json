        "/profile": {
            "get": {
                "tags": [
                    "Profile"
                ],
                "summary": "Display user's profile form",
                "description": "Get the user's profile edit form with verification status",
                "operationId": "getProfile",
                "responses": {
                    "200": {
                        "description": "Profile form data",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "mustVerifyEmail": {
                                            "description": "Whether user needs to verify email",
                                            "type": "boolean"
                                        },
                                        "status": {
                                            "description": "Session status message",
                                            "type": "string",
                                            "nullable": true
